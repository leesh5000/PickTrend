# Database
# Local (Docker): postgresql://postgres:postgres@localhost:5432/picktrend
# Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?pgbouncer=true
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/picktrend"
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/picktrend"

# YouTube API
# Get from: https://console.cloud.google.com/ > YouTube Data API v3
YOUTUBE_API_KEY="your-youtube-api-key"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"

# Admin Authentication
ADMIN_PASSWORD="your-admin-password"

# Naver DataLab API (for search trend data)
# Get from: https://developers.naver.com/apps/#/register
NAVER_CLIENT_ID="your-naver-client-id"
NAVER_CLIENT_SECRET="your-naver-client-secret"

# Google Trends RSS feed
# Set to "true" to enable Google Trends data collection via RSS
GOOGLE_TRENDS_ENABLED="false"

# Zum Realtime Search Crawler
# Set to "true" to enable Zum trending keywords crawling
ZUM_CRAWLING_ENABLED="false"
